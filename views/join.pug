extends layouts/main.pug

block content
    .form-container
        form(action=routes.postJoin, method="post")
            input(type="text", name="name", placeholder="Full Name", required="true")
            input(type="text", name="userID", placeholder="ID", required="true")
            input(type="password", name="userPW", placeholder="Password", required="true")
            input(type="password", name="confirmPW", placeholder="Vertify Password", required="true")
            input(type="submit", value="Join Now")
